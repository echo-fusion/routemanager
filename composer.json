{
    "name": "echo-fusion/routemanager",
    "description": "a route manager",
    "keywords": ["route manager"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Shadanfar",
            "email": "a.shadanfar.it@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "5.x-dev",
        "friendsofphp/php-cs-fixer": "dev-master",
        "echo-fusion/codestandard": "0.x-dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../codestandard",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "EchoFusion\\RouteManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EchoFusion\\RouteManager\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@cs-fix","@phpunit"
        ],
        "phpunit": "vendor/bin/phpunit",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "analyze": "psalm --show-info=false --no-cache --no-progress"
    },
    "minimum-stability": "dev"
}
